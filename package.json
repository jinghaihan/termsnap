{
  "name": "termsnap",
  "type": "module",
  "version": "0.4.0",
  "packageManager": "pnpm@10.17.1",
  "description": "ðŸ“¸ Creates beautiful screenshots, videos, and GIFs based on terminal command output.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/termsnap#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/termsnap.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/termsnap/issues"
  },
  "keywords": [
    "terminal",
    "screenshot",
    "capture",
    "video",
    "gif"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "termsnap": "./bin/termsnap.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "start": "NODE_ENV=development tsx ./src/cli.ts",
    "termsnap": "tsx ./src/cli.ts",
    "build": "unbuild && tsx scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint",
    "deps": "taze major -I",
    "release": "bumpp && pnpm publish --no-git-checks",
    "catalog": "pncat",
    "prepare": "npx simple-git-hooks",
    "bootstrap": "pnpm install",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@clack/prompts": "catalog:node",
    "@xterm/addon-serialize": "catalog:terminal",
    "@xterm/headless": "catalog:terminal",
    "ansis": "catalog:node",
    "cac": "catalog:node",
    "execa": "catalog:node",
    "fancy-ansi": "catalog:utils",
    "get-port": "catalog:utils",
    "kill-port": "catalog:utils",
    "pathe": "catalog:node",
    "puppeteer-core": "catalog:browser",
    "puppeteer-screen-recorder": "catalog:browser",
    "rimraf": "catalog:node",
    "string-width": "catalog:utils",
    "unconfig": "catalog:node",
    "ws": "catalog:network"
  },
  "optionalDependencies": {
    "@ffmpeg-installer/ffmpeg": "catalog:ffmpeg"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/kill-port": "catalog:types",
    "@types/node": "catalog:types",
    "@types/ws": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "simple-git-hooks": "catalog:lint",
    "taze": "catalog:cli",
    "tsx": "catalog:script",
    "typescript": "catalog:tsc",
    "unbuild": "catalog:build",
    "vitest": "catalog:test"
  },
  "resolutions": {
    "@ffmpeg-installer/ffmpeg": "1.1.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,mts}": "eslint --fix"
  }
}
